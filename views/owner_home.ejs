<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./templates/header')%>
</head>
<body style="text-align: center;">
    <%- include('./templates/full_navbar')%>
    
    <div class="row justify-content-center">
        <h1>Viajes</h1>
        
        <div class="col-auto">

          <div style="margin-top: 5%">
            <div class="card-body">
              <%if(travels.length){%>
                  <table id="travels_table" class="table table-responsive">
                      <thead>
                          <th>Placa</th>
                          <th>Conductor</th>
                          <th>Fecha</th>
                          <th>Origen</th>
                          <th>Destino</th>
                          <th>Valor</th>
                          <th>Gastos</th>
                          <th>Ganancias</th>
                      </thead>
                      <tbody style="cursor: pointer;">
                          <% travels.forEach(fullTravel => { %>
                              <tr class="clickable" data-bs-toggle="modal" data-bs-target="#details">
                                  <td><%= fullTravel.vehicle.plate %></td>
                                  <td><%= fullTravel.driverName %></td>
                                  <td><%= fullTravel.travel.date %></td>
                                  <td><%= fullTravel.travel.origin %></td>
                                  <td><%= fullTravel.travel.destiny %></td>
                                  <td>$<%= fullTravel.travel.value %></td>
                                  <td>$<%= fullTravel.travel.expenses %></td>
                                  <td>$<%= fullTravel.travel.gain %></td>
                                  <td style="display: none;">$<%= fullTravel.travel.details.gas %></td>
                                  <td style="display: none;">$<%= fullTravel.travel.details.toll %></td>
                                  <td style="display: none;">$<%= fullTravel.travel.details.maintenance %></td>
                                  <td style="display: none;">$<%= fullTravel.travel.details.load %></td>
                                  <td style="display: none;">$<%= fullTravel.travel.details.unload %></td>
                                  <td style="display: none;">$<%= fullTravel.travel.details.driver %></td>
                              </tr>
                          <%})%>
                      </tbody>
                  </table>
              <%}else{%>
                  <h5>No hay Registros</h5>
              <%}%>
          </div>

        </div>

    </div>

    <!-- Modal -->
    <div class="modal fade" id="details" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content"  style="border-radius: 25px;">
          <div class="modal-header">
            <h5 class="modal-title"" id="details_title">Detalle</h5>
          </div>
          <div class="modal-body">
            <h6 id="value"></h6>
            <h6 id="gain"></h6>
            <h6><strong>Gastos</strong></h6>
            <table class="table table-responsive">
              <thead>
                  <th>Motivo</th>
                  <th>Valor</th>
              </thead>
              <tbody id="details_body">
                  
              </tbody>
          </table>

          </div>
          <div class="modal-footer">
            <button type="button" class="navbar-custom" style="color: white;text-align: center;border-radius: 25px;" data-bs-dismiss="modal" aria-label="Close">Volver</button>
          </div>
        </div>
      </div>
    </div>

    <!-- FAB -->

    <div class="mainopShadow"></div>
      <div class="fab"> 
        <div id="sheets" class="minifab op1" style="cursor: pointer;">
          <svg class="minifabIcon" viewBox="0 0 24 24">
            <path fill="white" d="M15,14C12.33,14 7,15.33 7,18V20H23V18C23,15.33 17.67,14 15,14M6,10V7H4V10H1V12H4V15H6V12H9V10M15,12A4,4 0 0,0 19,8A4,4 0 0,0 15,4A4,4 0 0,0 11,8A4,4 0 0,0 15,12Z" />
          </svg>
        </div>
        <div id="docs" class="minifab op1" style="cursor: pointer;">
          <svg class="minifabIcon" viewBox="0 0 24 24">
            <path fill="white" d="M18,18.5A1.5,1.5 0 0,1 16.5,17A1.5,1.5 0 0,1 18,15.5A1.5,1.5 0 0,1 19.5,17A1.5,1.5 0 0,1 18,18.5M19.5,9.5L21.46,12H17V9.5M6,18.5A1.5,1.5 0 0,1 4.5,17A1.5,1.5 0 0,1 6,15.5A1.5,1.5 0 0,1 7.5,17A1.5,1.5 0 0,1 6,18.5M20,8H17V4H3C1.89,4 1,4.89 1,6V17H3A3,3 0 0,0 6,20A3,3 0 0,0 9,17H15A3,3 0 0,0 18,20A3,3 0 0,0 21,17H23V12L20,8Z" />
          </svg>
        </div>
      </div>

    <%- include('./templates/footer')%>
</body>
</html>